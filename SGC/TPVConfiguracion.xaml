<Window x:Class="SGC.TPVConfiguracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGC"
        mc:Ignorable="d"
        Title="TPVConfiguracion" Height="150" Width="400" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFE7FFED">
        <StackPanel>
            <Label HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontSize="15" FontWeight="DemiBold">Selecciona opción:</Label>
            <Button Content="Categorias" Width="70" Margin="0,10" Height="25" Click="Button_Click"></Button>
            <Button Content="Productos" Width="70" Height="25" Click="Button_Click2"></Button>
        </StackPanel>
        
    </Grid>
</Window>
